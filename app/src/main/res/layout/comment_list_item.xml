<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/listFriendCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/listCommentImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                app:srcCompat="@drawable/com_facebook_favicon_blue" />

            <TextView
                android:id="@+id/listCommentName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/listCommentImage"
                android:padding="5dp"
                android:text="Username"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/listCommentBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/listCommentImage"
                android:layout_marginTop="0dp"
                android:text="Comment"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <Button
                android:id="@+id/commentDeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/listCommentName"
                android:text="Delete"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textSize="8sp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>